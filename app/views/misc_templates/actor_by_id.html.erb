<h1>actor #<%= @actor.id %> details </h1>

<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>
  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>
  <dt>Image</dt>
  <dd><img style="width:250px" 
    src="<%= @actor.image %>">
  </dd>
  <dt>Created at</dt>
  <dd><%= @actor.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @actor.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
    <% @roles.each { |role| %>
      <% movie = Movie.where({id: role.movie_id}).at(0) %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td> <%= Director.where({id: movie.director_id}).at(0).name %></td>
        <td><%= role.name %></td>
        <td>
          <a href = "/movies/<%= movie.id %>">Show details</a>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
